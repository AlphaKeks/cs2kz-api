root = true

[*]
indent_style = tab
indent_size = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.{txt,md}]
indent_style = space
indent_size = 3

[{*.{toml,yaml,json,sh,env,nix,sql},.envrc}]
indent_style = space
indent_size = 2
